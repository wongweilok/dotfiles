#!/bin/sh

# Status bar script that outputs the battery percentage.
# Output no battery when battery is detached.

if [ $(ls /sys/class/power_supply/ | wc -l) == 1 ]; then
	echo "^c#fb4934^ No Battery^d^"
else
	for x in /sys/class/power_supply/BAT?/capacity;
	do
		case "$(cat $x)" in
			100|9[0-9])	echo "^c#fb4934^ $(cat $x)%" ;;
			8[0-9]|7[0-9])	echo "^c#fb4934^ $(cat $x)%" ;;
			6[0-9]|5[0-9])	echo "^c#fb4934^ $(cat $x)%" ;;
			4[0-9]|3[0-9])	echo "^c#fb4934^ $(cat $x)%" ;;
			2[0-9]|1[0-9])	echo "^c#fb4934^ $(cat $x)%" ;;
			*)		echo "^c#fb4934^ $(cat $x)%" ;;
		esac
	done
fi
