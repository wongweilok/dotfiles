# Bindings for launching programs
super + Return
	$TERMINAL
super + d
	dmenu_run
super + r
	$TERMINAL -e $FILE
super + m
	$TERMINAL -e ncmpcpp
super + c
	$TERMINAL -e calcurse -D ~/.config/calcurse
super + w
	$BROWSER
super + s
	$TERMINAL -e htop

# Other utilities
super + shift + x
	powerOption
super + x
	slock & xset dpms force off ; mpc pause
super + i
	fcitx

# Screenshot
Print
	ssOption

# Audio Keys
XF86AudioMute
	amixer sset Master toggle
XF86Audio{Raise,Lower}Volume
	amixer sset Master 5%{+,-}
XF86Audio{Next,Prev}
	mpc {next,prev}

# Function keys
super + F2
	launch_polybar
super + F12
	$TERMINAL -e nmtui

# Bspwm control keys
super + {_,shift + }q
	bspc node -{c,k}
super + {_,shift + }f
	bspc {node -t \~fullscreen,desktop -l next}
super + y
	bspc node @focused:/ -R 90
super + space
	bspc node -s biggest.local || bspc node -s next.local
super + shift + space
	bspc node focused -t \~floating
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}
super + {g,semicolon}
	bspc desktop {prev,next}.occupied --focus
super + {Tab,backslash}
	bspc desktop last --focus
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} focused:'^{1-9,10}'
super + shift + {y,u,i,o}
	bspc node -z {right -20 0,bottom 0 20,bottom 0 -20,right 20 0}
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
super + shift + d
	bspc config window_gap 5
super { ,+ shift }+ z
	bspc config window_gap $(($(bspc config window_gap) {+,-} 5))
super + o
	bspc node -g sticky={on,off}
